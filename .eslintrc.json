{
	"extends": [
		"eslint-config-hudochenkov",
		"eslint-config-prettier"
	],
	"env": {
		"browser": false,
		"node": true,
		"es6": true,
		"jest": true
	},
	"globals": {
		"testConfig": true,
		"testRule": true
	},
	"rules": {
		"prefer-const": "off",
		"prefer-destructuring": [
			"error",
			{
		       "array": false,
		       "object": true
		    }
		],
		"prefer-rest-params": ["error"],
		"prefer-spread": ["error"]
	}
}
